/* pages/stuService/stuService.wxss */
page{background: #ffffff;overflow-x: hidden;}
.stu-h{
  overflow-x: hidden;
}
.ellipse{
  overflow-x: hidden;
  width: 120%;
  margin-left: -10%;
  height: 220px;
  margin-top: -100px;
  background: #008783;
  border-radius: 50% / 50%;
}
.stu-h-m{
  margin: 45rpx;
  height: 380rpx;
  margin-top:-100px;
  background-color: #ffffff;
	box-shadow: 2rpx 4rpx 15rpx 0rpx 
		rgba(0, 135, 131, 0.75);
	border-radius: 4px;
  position: relative;
  overflow: hidden;
}
.bg-wave{
  position: absolute;
  width: 100%;
  height: 100%;
  bottom: -65%;
}

.stu-sinfo{
  padding: 27px 0;
  width: 100%;
  text-align: center;
}

.stu-tx{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 0 auto;
  background-color: #ffffff;
	border: solid 3px #008783;
  padding: 5px;
  overflow: hidden;
}

.stu-tx image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.stu-name{
  margin-top: 20rpx;
  font-size: 38rpx;
}