/* pages/newsDetail/newsDetail.wxss */
.content{background-color: #FFFFFF;}
	.article-title{font-size: 35rpx;text-align: left;padding: 40rpx 35rpx 30rpx;}
	.article-nav {
    position: relative;
	    display: flex;
	    flex-direction: row;
	    justify-content: space-between;
		font-size: 28rpx;
    padding: 0rpx 35rpx 30rpx;
	}
  .article-nav::after{content: '';width: 100%;height: 1px;background: #d5d5d5;position: absolute;left: 0;right: 0;bottom: 0;}
	.article-nav-left,.article-nav-right{display: flex;height: 35rpx;line-height: 35rpx;}
	.icon{
		width: 35rpx;height: 35rpx;display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		margin-right: 8rpx;
	}
	.article{
		width: calc(100% - 70rpx);
		overflow: hidden;
		line-height: 50rpx;
		font-size: 32rpx;
		color: #474747;
		padding: 30rpx 35rpx;
	}
	video{
		width: 100%;
	}
	h1{font-size: 20rpx !important;}
	.memoimg{}
	.memop{
		line-height: 50rpx;
		font-size: 30rpx !important;
		color: #474747;
	}
	.memop span{
		line-height: 50rpx;
		font-size: 30rpx !important;
		color: #474747;
	}

  .memoimg{width:100% !important;height: auto !important;}
	.memop{
		line-height: 50upx;
		font-size: 30upx !important;
		color: #333;
	}
	.memop span{
		line-height: 50upx;
		font-size: 30upx !important;
		color: #333;
	}

  .wxParse-img{width:100% !important;}