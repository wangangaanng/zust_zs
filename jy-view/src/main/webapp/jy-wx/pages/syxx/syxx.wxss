.down-scroll-view{
  position: relative;
}
.down-scroll-view .scroll-view{
  position: absolute;right: 0;top:88rpx;z-index: 9999;background: #fff;width: 100%;border: 1rpx solid #ccc;border-radius: 5rpx;height: 400rpx;overflow: hidden;
}
.down-scroll-view .scroll-view scroll-view{
  position: relative;
  width: 100%;
  height: 100%;
}
.down-scroll-view scroll-view view{
  text-align: left;
  padding: 8rpx 30rpx;
  font-size: 28rpx;
}
.down-scroll-view scroll-view view span{
  width: 600rpx;
  display: inline-block;
}
.btn-close{
  position: fixed;
  right: 0;
  top: 0;
}