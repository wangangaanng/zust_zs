<!--index.wxml-->
<swiper class='index-swiper' indicator-dots="true" autoplay="true" indicator-color="#ffffff" indicator-active-color="#008783">
  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src='{{item}}'></image>
    </swiper-item>
  </block>
</swiper>
<van-grid square>
  <van-grid-item icon="{{item.icon}}" text="{{item.text}}" wx:for="{{ menuList }}"></van-grid-item>
</van-grid>
<van-tabs animated>
  <van-tab title="最新职位">
    <view>
      <a class="weui-media-box weui-media-box_appmsg">
      <div class="weui-media-box__hd">
        <image class="weui-media-box__thumb" src="https://ss0.bdstatic.com/70cFuHSh_Q1YnxGkpoWK1HF6hhy/it/u=1679456154,2493198454&fm=26&gp=0.jpg" alt=""></image>
          </div>
        <div class="weui-media-box__bd">
          <h4 class="index-guess_title">名称名称</h4>
          <h6>年 · 万公里</h6>
          <p>成交价<span class="index-guess_prize"> 万</span>
          </p>
        </div>
      </a>
    </view>
  </van-tab>
  <van-tab title="最新企业">内容 2</van-tab>
  <van-tab title="招聘会信息">内容 3</van-tab>
  <van-tab title="宣讲会信息">内容 4</van-tab>
</van-tabs>
