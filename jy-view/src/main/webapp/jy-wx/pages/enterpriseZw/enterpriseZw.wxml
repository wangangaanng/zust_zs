<view class="uni-list">
  <block wx:for="{{xjhList}}" wx:key="{{index}}">
  <van-swipe-cell id="owid1" right-width="{{ 65 }}" async-close bind:close="onClose">
    <view class="uni-list-cell" hover-class="uni-list-cell-hover">
      <view class="uni-media-list">
        <view class="uni-media-list-body">
          <view class="uni-media-list-text-top">{{item.zwbt}}</view>
          <view class="uni-media-list-text-bottom">
            <view class="uni-media-list-text-bottom-left">发布时间：{{tools.substr(item.createtime,0,10)}}</view>
            <view class="uni-media-list-text-bottom-right ">
              <span wx:if="{{item.state==0}}" style="color:#888;">待审核</span>
              <span wx:if="{{item.state==2}}" style="color:green;">已发布</span>
              <span wx:if="{{item.state==3}}" style="color:red;">拒绝</span>
              <span wx:if="{{item.state==6}}" style="color:orange;">下架</span>
            </view>
          </view>
          <view class="uni-media-list-text-content">
          职能类别：{{item.zwGzznStr}}
          <van-icon
            name="arrow"
            class="pull-right"
            custom-class="icon"
          />
          </view>
          <view class="uni-media-list-text-content">
          关注人数：{{tools.getSize(item.xsgzList) || 0}}
          </view>
        </view>
      </view>
    </view>
    <view slot="right">
      <van-button type="danger">删除</van-button>
    </view>
  </van-swipe-cell>
