/* pages/messageCenter/messageCenter.wxss */

page {
  padding: 25px 0;
  background: #f5f5f5;
}

.li {
  padding: 0 13px;
  margin-bottom: 20rpx;
}

.Piece {
  background: #fff;
  padding: 15px 7px;
  margin-left: 30rpx;

}

.name {
  color: #444;
  font-size: 12px;
  margin-bottom: 20rpx;
}

.date {
  color: #999;
  font-size: 12px;
}

.van-icon {
  position: relative;
  top: 2px;
  margin-right: 10rpx;
}

.point {
  width: 6px;
  height: 6px;
  background-color: #26b887;
  border-radius: 50%;
}
.border{
	width: 2px;
	height: 70px;
	background-color: #dddddd;
  position: relative;
  left: 4rpx;
  top: 4px;
}
.left{
  float: left;
  position: relative;
  top: 72rpx;
}
.li:last-child .border{
  display: none;
}