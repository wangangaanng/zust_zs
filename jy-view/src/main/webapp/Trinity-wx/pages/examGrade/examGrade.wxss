/* pages/examGrade/examGrade.wxss */
page{
  background: #f5f5f5;
}
.title-wrap{
  padding: 30rpx 25rpx 0rpx 30rpx;
  background: #FFF;
}
.red{color: red;}
.cell{
  display: flex;
  padding: 10px 15px;
  font-size: 14px;
  position: relative;
  line-height: 24px;
}
.cell::after{
  position: absolute;
  box-sizing: border-box;
  -webkit-transform-origin: center;
  transform-origin: center;
  content: " ";
  pointer-events: none;
  top: auto;
  right: 0;
  bottom: 0;
  left: 15px;
  border-bottom: 1px solid #eee;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.cell_left{
  display: inline-block;
  flex: 1;
}
.cell_right view{
  float: left;
  background: #eee;
  color: #000;
  border-radius: 30px;
  padding: 2px 10px;
  width: 30px;
  text-align: center;
  margin-left: 8px;
  font-size: 13px;
}
.cell_right view.active{
  background: #26b887;
  color: #fff;
}