/* pages/grzx/grzx.wxss */
.head view{
  height: 90rpx;
  background-color: #26b887;
  width: 100%;
}
.head{
  text-align: center;
}
.tx{
  position: relative;
  top: -90rpx;
  height: 220rpx;
  width: 220rpx;
  border: 3px solid #fff;
  border-radius: 50%;
}
.name{
  font-size: 21px;
  color: #333333;
  margin-top: -50rpx;
  text-align: center;
}
.tel{
  margin: 20rpx 0 100rpx;
  font-size: 13px;
  color: #585858;
  text-align: center;
}
.van-cell__left-icon-wrap{
  position: relative;
  top: -3px;
}
.van-cell::after{
  display: none;
}
.button {
  padding: 0 70rpx;
  margin-top: 70rpx;
}

.button button {
  background-image: linear-gradient(0deg, #51cca3 0%, #26b887 100%);
  box-shadow: 0px 3px 10px 0px rgba(69, 214, 165, 0.75);
  border-radius: 40rpx;
  color: #fff;
  font-size: 16px;
}