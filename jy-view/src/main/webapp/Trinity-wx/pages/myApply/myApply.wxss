/* pages/shouye/shouye.wxss */

page {
  background: #f5f5f5;
}

.conter {
  background: #fff;
  padding: 26rpx;
  box-shadow: 0px 1px 3px 0px rgba(210, 210, 210, 0.75);
  min-height: 180px;
  margin-bottom: 15px;
}

.cont-img-view {
  border-radius: 50%;
  border: 1px solid #26b887;
  background: #fff;
  height: 100rpx;
  width: 100rpx;
  float: left;
  margin-right: 10px;
  text-align: center;
}

.cont-img {
  height: 40rpx;
  width: 80rpx;
  margin-top: 15px;
}

.cont-name {
  font-size: 18px;
  color: #252525;
  line-height: 100rpx;
  margin-bottom: 20rpx;
}

.conter-right {
  float: right;
  height: 85px;
  width: 114px;
  background-color: #26b887;
  border-radius: 5px;
  text-align: center;
  color: #fff;
  margin-left: 10px;
}

.conter-right view {
  line-height: 42px;
}

.conter-right-date {
  font-size: 17px;
}

.conter-right-name {
  font-size: 15px;
  position: relative;
}

.conter-right-name::after {
  content: " ";
  position: absolute;
  top: 43px;
  height: 1px;
  border-top: 1px solid #fff;
  color: #fff;
  transform-origin: 0 0;
  transform: scaleY(0.5);
  left: 40px;
  right: 40px;
}

.conter-left-ul {
  margin-right: 100px;
  display: table;
}

.conter-left-ul .conter-left-li {
  color: #4b4b4b;
  font-size: 12px;
  background-color: #e5e5e5;
  border-radius: 5px;
  margin-right: 9px;
  padding: 7px 14px;
  float: left;
  margin-bottom: 10px;
}

.jieshao {
  font-size: 12px;
  color: #6e6e6e;
  margin-bottom: 15px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  line-height: 24px;
}

.signUp {
  width: 100%;
  display: table;
}

.signUp .text {
  color: #fe4648;
  font-size: 13px;
  line-height: 20px;
}

.signUp .button {
  background-color: #26b887;
  /* background-color: #FE4648; */
  border-radius: 5px;
  font-size: 13px;
  color: #fff;
  line-height: 34px;
  width: 78px;
  float: right;
  text-align: center;
  padding: 0;
  margin-bottom: 0;
}

.step {
  padding-top: 15px;
  margin-top: 15px;
  color: #535353;
  font-size: 13px;
  position: relative;
}

.step::after {
  position: absolute;
  box-sizing: border-box;
  -webkit-transform-origin: center;
  transform-origin: center;
  content: " ";
  pointer-events: none;
  right: 0;
  top: 0;
  left: 0;
  border-top: 1px solid #eee;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.weui-loadmore__tips_in-line {
  background-color: #f5f5f5;
}