<!--pages/Process/Process.wxml-->
<view class="top">
  <image src="../../static/mark.png" class="mark"></image>
  <navigator class="li" url='../messageCenter/messageCenter'>
    <image src="../../static/bell.png" class="bell"></image>
   </navigator >
  <view class="left">
    <view class="name">浙江科技学院</view>
    <view class="welcome">欢迎，张小凡！</view>
  </view>
</view>
<view class="conter">
  <van-divider contentPosition="center" customStyle="padding: 50rpx 0 40rpx;color: #26b887;border-color: #26b887;font-size: 18px;">招生流程</van-divider>
  <view class="pic" style="left: 95px;"></view>
  <view class="pic" style="right: 95px;"></view>
  <view class="lc">
    <view class="lc-rows">
      <navigator class="lc-row {{bmState>0?'':'yet'}}" url='../examTip/examTip'>提交报名申请</navigator>
    </view>
    <view class="lc-rows">
      <image src="../../static/arrow.png" class="arrow"></image>
    </view>
    <view class="lc-rows" >
      <view class="lc-row {{bmState>1?'':'yet'}}">预览，发送到邮箱</view>
    </view>
    <view class="lc-rows">
      <image src="../../static/arrow.png" class="arrow"></image>
    </view>
    <view class="lc-rows" >
      <navigator class="lc-row {{bmState>2?'':'yet'}}" url='../uploadSignature/uploadSignature'>拍照上传</navigator>
    </view>
    <view class="lc-rows">
      <image src="../../static/arrow.png" class="arrow"></image>
    </view>
    <view class="lc-rows">
      <view class="lc-row {{bmState>2?'':'yet'}}">等待初审</view>
    </view>
    <view class="lc-rows">
      <text class="arrow2-text">{{bmState>4?"通过":"　　"}}</text>
      <image src="../../static/arrow2.png" class="arrow2"></image>
      <text class="arrow2-text">{{bmState==4?"拒绝":"　　"}}</text>
    </view>
    <view class="lc-rows2" >
      <navigator class="lc-row {{bmState>6?'':'yet'}}" style="" url='../payOline/payOline'>缴费</navigator>
      <view class="lc-row {{bmState==4?'':'yet'}}">结束</view>
    </view>
    <view class="lc-rows2">      
      <image src="../../static/arrow.png" class="arrow"></image>      
    </view>
    <view class="lc-rows2">
      <navigator class="lc-row {{bmState>7?'':'yet'}}" style=""  url='../drawGroup/drawGroup'>面试分组</navigator>
      <view class="lc-row hide"></view>
    </view>
    <view class="lc-rows2">      
      <image src="../../static/arrow.png" class="arrow"></image>      
    </view>
    <view class="lc-rows2">
      <navigator class="lc-row {{bmState>8?'':'yet'}}" style="">面试通知单</navigator>
      <view class="lc-row hide"></view>
    </view>
    <view class="lc-rows2">      
      <image src="../../static/arrow.png" class="arrow"></image>      
    </view>
    <view class="lc-rows2">
      <view class="lc-row {{bmState>9?'':'yet'}}" style="">成绩查询</view>
      <view class="lc-row hide"></view>
    </view>
  </view>
</view>