<view class="conter" wx:if="{{!focus}}">
  <scroll-view class="scroll-view_H" scroll-x="true" bindscrolltolower="scroll">
    <view bindtap="click" wx:for="{{array}}" wx:key="index" class="scroll-view_H_li {{index1==index?'active':''}}" data-index1="{{index}}">{{item.NAME}}</view>
    <view class="ff" wx:if='{{ff}}'>
      <van-icon name="arrow"/>
    </view>
  </scroll-view>
  <swiper indicator-dots="{{false}}" current="{{index1}}" bindchange="swiper">
    <swiper-item style="posistion:relative" wx:for="{{array}}" wx:key="index">
      <navigator wx:for="{{item.list}}" wx:for-index="idx" wx:for-item="itemName" wx:key='*this' url="../wxDetail/wxDetail?owid={{itemName.owid}}" class="list" >
        <image src="../../static/img1.png" class="li-left"></image>
        <view class="li-right">
          <view class="li-right-title">{{itemName.wzbt}}</view>
          <view class="li-right-detail">{{itemName.jjnr}}</view>
          <view class="li-right-date">{{itemName.fbsj}}</view>
        </view>
      </navigator>      
    </swiper-item>
  </swiper>
</view>