/* pages/qyInfo/qyInfo.wxss */

@import "../../libs/wxParse/wxParse.wxss";
page{background: #f3f3f5;}
.cell{background: #fff;margin-bottom: 30rpx;}
.title{font-size: 35rpx;text-align: left;padding: 35rpx 35rpx;border-bottom: 1px solid #e4e4e4;}
.titlebt{font-size: 35rpx;text-align: left;padding: 40rpx 35rpx 30rpx;}
.content{padding: 20rpx 20rpx;border-bottom: 1px solid #e4e4e4;}
.content p{font-size: 30rpx;color: #474747;}
.article{
  width: calc(100% - 70rpx);
  overflow: hidden;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #474747;
  padding: 30rpx 35rpx;
}

.float-btn3{
  background: #00aba5;
  border: 1px solid #008783;
  color: #fff;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: fixed;
  top: 860rpx;
  right: 35rpx;
  font-size: 29rpx;
  padding: 15rpx;
  text-align: center;
  z-index: 100;
}
  
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  min-height: 60rpx;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: left;
    font-size: 30rpx;
}
.td-name{color: #595959;}

.modal{width: 100%;height: 100%;background: rgba(0, 0, 0, .7);position: fixed;left: 0;top: 0;z-index: 999999990;}
.modal-title{width: 100%;text-align:center;padding: 20rpx 0;}
.modal-content{
  width: 84%;background-color: #fff;position: fixed;left: 8%;top: 240rpx;z-index: 999999999;border-radius: 5rpx;
}
.modal-content textarea{width: 95%;height: 320rpx;padding: 20rpx;}
.btns{display: flex;height: 80rpx;}
.btns button{width: 50%;height: 80rpx;line-height: 80rpx;border-radius: 0 !important;color: #888;}
.btns button::after{border-radius: 0 !important;}
.btns button.green{border-left: none !important; color: #008783;}
.btns button.green:after{border-left: none !important;}
.van-cell__left-icon-wrap,.van-cell__right-icon-wrap {
  height: 45px !important;
}