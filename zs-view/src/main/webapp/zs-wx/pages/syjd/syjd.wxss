/* pages/syjd/syjd.wxss */

.syd-list{width: calc( 100% - 40rpx);margin: 20rpx;overflow: hidden;}
.syd-item{width: 50%;float: left;margin-bottom: 20rpx;}
.syd-content{width:calc( 100% - 20rpx);background-color: #fff;margin: 0 auto;padding: 10rpx;box-sizing: border-box;}
.syd-item image{width: 100%;height: 200rpx;}
.syd-mc{
    text-align: left;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #008784;
    font-size: 30rpx;
    margin:10rpx 0;
}
.syd-js{
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  color: #8c8c8c;
  font-size: 26rpx;
  height: 70rpx;
  margin-bottom: 10rpx;
  -webkit-box-orient: vertical;
}
.syd-tj{overflow: hidden;}
.pull-left{float: left;display: flex;display: -webkit-flex;align-items:flex-end;}
.pull-right{float: right;display: flex;display: -webkit-flex;align-items:flex-end;}
.glyphicon{margin-right: 8rpx;}
.syd-time{ color: #008784;font-size: 26rpx;}