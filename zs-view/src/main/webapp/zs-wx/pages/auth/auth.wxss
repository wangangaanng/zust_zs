/* pages/auth/auth.wxss */
.login-btn{margin: 100rpx 30rpx;background: #008783;color: #fff;}
.ellipse{
  width: 120%;
  margin-left: -10%;
  height: 220px;
  margin-top: -100px;
  background: #008783;
  border-radius: 50% / 50%;
}
.stu-h-m{
  margin: 45rpx;
  height: 380rpx;
  margin-top:-100px;
  background-color: #ffffff;
	box-shadow: 2rpx 4rpx 15rpx 0rpx 
		rgba(0, 135, 131, 0.75);
	border-radius: 4px;
  position: relative;
  overflow: hidden;
}
.bg-wave{
  position: absolute;
  width: 100%;
  height: 100%;
  bottom: -65%;
}

.stu-sinfo{
  padding: 27px 0;
  width: 100%;
  text-align: center;
}

.stu-tx{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 0 auto;
  background-color: #ffffff;
	border: solid 3px #008783;
  padding: 5px;
  overflow: hidden;
}

.stu-tx image{
  width: 100%;
  height: 100%;
}

.stu-name{
  margin-top: 20rpx;
  font-size: 38rpx;
}

.modal{width: 100%;height: 100%;background: rgba(0, 0, 0, .7);position: fixed;left: 0;top: 0;z-index: 999999990;}
.modal-title{width: 100%;text-align:center;padding: 20rpx 0;}
.modal-content{
  width: 84%;background-color: #fff;position: fixed;left: 8%;top: 150rpx;z-index: 999999999;border-radius: 5rpx;
}
.modal-content textarea{width: 95%;height: 320rpx;padding: 20rpx;}