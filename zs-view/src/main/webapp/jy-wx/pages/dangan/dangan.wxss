/* pages/dangan/dangan.wxss */
.search-form{background: #fff;width:620rpx;margin: 150rpx auto;}
.search-title{background: #008784;text-align: center;height: 55px;line-height: 55px;color: #fff;}
.van-cell{border: 1px solid #eee;margin-bottom: 15px;}
.van-icon{
  color: #008784;
}
.van-button{height: 45px !important;line-height: 45px !important;}
.search-content{padding: 20px;}

.result-title{text-align: center;padding: 20px 0px;}
.student-main{background: #008784;border-radius: 5px;padding: 20px;color: #fff;}
.student-head{height: 110px;}
.student-main image{width:75px;height: 100px;border: 1px solid #eee;float: left;margin-right: 20px;}
.name{font-size: 35rpx;margin-bottom: 10px;}
.sex{font-size: 30rpx;}
.sex span{margin-left: 20px;}
.dx{font-size: 40rpx;line-height: 80rpx;}
.zy{font-size: 30rpx;}

.table {
  border: 0px solid darkgray;
  width: 500rpx;
  margin: 20px auto;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 70rpx;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: left;
    font-size: 30rpx;
}
.td-name{color: #9c9c9c;text-align: right;}
.result{padding: 0 5% 0 5%;background: #fff;}
.student-info .van-button{margin: 0 auto 20px;}