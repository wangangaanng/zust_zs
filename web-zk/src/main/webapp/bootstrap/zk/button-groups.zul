<n:h3 id="btn-groups-vertical">Vertical variation</n:h3>
	<div class="bs-example">
		<div class="btn-group-vertical">
			<button>Button</button>
			<button>Button</button>
			<button dir="reverse" class="btn-default dropdown-toggle"
				popup="m1, after_start" iconSclass="caret">
				Dropdown
			</button>
			<button>Button</button>
			<button>Button</button>
			<button dir="reverse" class="btn-default dropdown-toggle"
				popup="m1, after_start" iconSclass="caret">
				Dropdown
			</button>
			<button dir="reverse" class="btn-default dropdown-toggle"
				popup="m1, after_start" iconSclass="caret">
				Dropdown
			</button>
			<button dir="reverse" class="btn-default dropdown-toggle"
				popup="m1, after_start" iconSclass="caret">
				Dropdown
			</button>
		</div>
	</div>
	
	<div class="highlight">
		<n:pre style="white-space:pre;"><![CDATA[
<span style='color:#7f0055; '>&lt;</span><span style='color:#7f0055; '>div</span> class=<span style='color:#2a00ff; '>"</span><span style='color:#2a00ff; '>btn-group-vertical</span><span style='color:#2a00ff; '>"</span><span style='color:#7f0055; '>></span>
