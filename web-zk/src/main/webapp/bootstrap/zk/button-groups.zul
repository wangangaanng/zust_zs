		<button sclass="btn-primary">Primary</button>
		<button sclass="btn-success">Success</button>
		<button sclass="btn-info">Info</button>
		<button sclass="btn-warning">Warning</button>
		<button sclass="btn-danger">Danger</button>
	</div>

	
